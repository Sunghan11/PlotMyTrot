<!DOCTYPE html>
<html>
  <head>
    <title>TraceMyPace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@900&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.tmplogoURL = "<%= image_url('tmplogo.png') %>";
      window.logoSmallURL = "<%= image_url('logoSmall.png') %>";
      window.logoURL = "<%= image_url('logo.png') %>";
      window.logoBigURL = "<%= image_url('logoBig.png') %>";
      window.UAHoverapp = "<%= image_url('UAHoverapp.png') %>";
      window.downArrow = "<%= image_url('downArrow.png') %>";
      window.avatar = "<%= image_url('avatar.jpg') %>";
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
